{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "build"
  },
  "typeRoots": [
    "./node_modules/lighthouse/typings",
    "./node_modules/lighthouse/node_modules/"
  ],
  "include": [
    "./src/**/*.ts",
    "./node_modules/lighthouse/typings/*.d.ts"
  ]
}
