{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "outDir": "./build",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true
  },
  "typeRoots": [
    "@types",
    "./node_modules/@types",
    "./node_modules/lighthouse/typings"
  ],
  "include": [
    "./src/**/*.ts",
    "./config/**/*.ts",
    "./scripts/ts/**/*.ts",
    "./node_modules/lighthouse/typings/*.d.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
